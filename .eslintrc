{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": ["jest"],
  "globals": {
    "ENV": true,
    "OPEN_WEATHER_API_KEY": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "brace-style": ["error", "1tbs"],
    "comma-dangle": ["error", "always-multiline"]
  }
}